<application>

  <name>icub-vision</name>

  <dependencies>
      <port>/icubSim/cam/left</port>
  </dependencies>

  <module>
      <name>move_ball</name>
      <node>localhost</node>
      <tag>objectMover</tag>
  </module>

  <module>
      <name>object_detector</name>
      <node>localhost</node>
      <tag>objectDetector</tag>
  </module>

  <module>
      <name>lookAtLocation</name>
      <node>localhost</node>
      <tag>objectTracker</tag>
  </module>  

  <module>
      <name>yarpview</name>
      <parameters>--name /viewer --x 10 --y 10</parameters>
      <node>localhost</node>
      <tag>objectViewer</tag>
  </module>
  
  <module>
      <name>yarp</name>
      <parameters>read /read</parameters>
      <node>localhost</node>
      <stdio>localhost</stdio>
      <tag>objectReader</tag>
  </module>

  <connection>
      <from>/icubSim/cam/left</from>
      <to>/viewer</to>
      <protocol>udp</protocol>
  </connection>

  <connection>
      <from>/icubSim/cam/left</from>
      <to>/detector/image/in</to>
      <protocol>udp</protocol>
  </connection>

  <connection>
    <from>/detector/target</from>
    <to>/tracker/target:i</to>
    <protocol>tcp</protocol>
  </connection>
  
  <connection>
    <from>/detector/target</from>
    <to>/read</to>
    <protocol>tcp</protocol>
  </connection>

</application>


